{
  "name": "@ruheni/db-diff",
  "version": "0.2.9",
  "description": "",
  "type": "module",
  "exports": "./dist/index.js",
  "bin": {
    "db-diff": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsup src/index.ts  --format esm --watch --clean --onSuccess \"node dist/index.js\"",
    "build": "tsup src/index.ts --format esm --clean --sourcemap --minify --metafile --treeshake",
    "format": "prettier --write --plugin-search-dir=. \"**/*.ts\"",
    "local": "npm run build && npm i -g && npx db-diff",
    "format:check": "prettier --check --plugin-search-dir=. \"**/*.ts\"",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:fix": "eslint **/*.ts --fix",
    "test": "vitest",
    "test:coverage": "vitest --coverage"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@molt/command": "^0.7.0",
    "@platformatic/db": "^0.22",
    "chalk": "5.2.0",
    "execa": "7.1.1",
    "read-pkg-up": "^9.1.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "5.59.8",
    "@typescript-eslint/parser": "5.59.8",
    "eslint": "8.41.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-prettier": "4.2.1",
    "prettier": "2.8.8",
    "tsup": "6.7.0",
    "typescript": "5.1.3",
    "vite": "^4.3.9",
    "vitest": "0.31.4"
  },
  "peerDependencies": {
    "@platformatic/db": "*",
    "prisma": ">= 4.x"
  },
  "publishConfig": {
    "access": "public"
  },
  "eslintIgnore": [
    "/node_modules",
    "/dist"
  ]
}