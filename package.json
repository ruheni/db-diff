{
  "name": "@ruheni/db-diff",
  "version": "0.2.8",
  "description": "",
  "type": "module",
  "exports": "./dist/index.js",
  "bin": {
    "db-diff": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsup src/index.ts  --format esm --watch --clean --onSuccess \"node dist/index.js\"",
    "build": "tsup src/index.ts --format esm --clean --sourcemap --minify --metafile --treeshake",
    "format": "prettier --write --plugin-search-dir=. \"**/*.ts\"",
    "local": "npm run build && npm i -g && npx db-diff",
    "format:check": "prettier --check --plugin-search-dir=. \"**/*.ts\"",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:fix": "eslint **/*.ts --fix",
    "test": "vitest",
    "test:coverage": "vitest --coverage"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@platformatic/db": "0.22",
    "@platformatic/service": "0.22",
    "chalk": "5.1.0",
    "commander": "9.4.1",
    "execa": "6.1.0"
  },
  "devDependencies": {
    "@types/node": "18.8.3",
    "@typescript-eslint/eslint-plugin": "5.40.0",
    "@typescript-eslint/parser": "5.40.0",
    "eslint": "8.25.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "prettier": "2.7.1",
    "tsup": "6.2.3",
    "typescript": "4.8.4",
    "vite": "^3.1.8",
    "vitest": "0.24.0"
  },
  "peerDependencies": {
    "prisma": "4.x"
  },
  "publishConfig": {
    "access": "public"
  },
  "eslintIgnore": [
    "/node_modules",
    "/dist"
  ]
}
